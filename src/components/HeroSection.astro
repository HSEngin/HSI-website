---
// HeroSection.astro
// This component creates a hero banner with a title, subtitle, and call-to-action button

// Define the props interface
interface Props {
  title: string;
  subtitle: string;
  ctaText: string;
  ctaLink: string;
  bgImage: string;
}

// Get the props with destructuring
const { title, subtitle, ctaText, ctaLink, bgImage } = Astro.props;
---

<section class="relative bg-gray-900 text-white">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 overflow-hidden">
    <img 
      src={bgImage} 
      alt="Harley & Son Manufacturing Facility" 
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black bg-opacity-60"></div>
  </div>
  
  <!-- Content Container -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 py-24 md:py-32 flex flex-col items-start">
    <!-- Hero Content -->
    <div class="max-w-2xl">
      <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-4">
        {title}
      </h1>
      <p class="text-xl mb-8 text-gray-200">
        {subtitle}
      </p>
      <a 
        href={ctaLink} 
        class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-8 rounded-md transition duration-300"
      >
        {ctaText}
      </a>
    </div>
    
    <!-- Certification badges -->
    <div class="mt-12 flex flex-wrap gap-6">
      <div class="bg-white bg-opacity-20 backdrop-filter backdrop-blur-sm py-2 px-4 rounded-md flex items-center">
        <img src="/images/as9100-badge.svg" alt="AS9100 Certified" class="h-10 w-auto mr-2" />
        <span class="text-sm font-medium">AS9100D Certified</span>
      </div>
      <div class="bg-white bg-opacity-20 backdrop-filter backdrop-blur-sm py-2 px-4 rounded-md flex items-center">
        <img src="/images/iso-badge.svg" alt="ISO 9001:2015 Certified" class="h-10 w-auto mr-2" />
        <span class="text-sm font-medium">ISO 9001:2015</span>
      </div>
    </div>
  </div>
</section>
