---
// Homepage for Harley & Son
import MainLayout from '../layouts/MainLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import IndustriesSection from '../components/IndustriesSection.astro';
import CertificationsSection from '../components/CertificationsSection.astro';
import CTASection from '../components/CTASection.astro';
---

<MainLayout title="Harley & Son | Precision Manufacturing for Aerospace, Medical Devices, and Semiconductor Electronics">
  <!-- Hero Section -->
  <HeroSection 
    title="Precision Manufacturing Excellence" 
    subtitle="For over forty years, Harley & Son has been a key supplier of precision parts and subassemblies to the Aerospace, Medical Device, and Semiconductor Electronics Industries."
    ctaText="Request a Quote"
    ctaLink="/contact"
    bgImage="/images/hero-manufacturing.jpg"
  />
  
  <!-- Key Services Section -->
  <ServicesSection 
    title="Our Capabilities" 
    subtitle="Delivering turnkey mechanical parts for your next project"
    services={[
      {
        title: "Precision Machining",
        description: "High-precision parts manufactured to the most demanding specifications.",
        icon: "precision-icon.svg",
        link: "/services/machining"
      },
      {
        title: "Sheet Metal Fabrication",
        description: "Custom sheet metal components with exceptional quality and precision.",
        icon: "sheet-metal-icon.svg",
        link: "/services/sheet-metal"
      },
      {
        title: "3D Printing",
        description: "Complex components produced in a fraction of traditional manufacturing time.",
        icon: "3d-printing-icon.svg",
        link: "/services/3d-printing"
      },
      {
        title: "Assembly Services",
        description: "Comprehensive assembly for high-tech components with perfect precision.",
        icon: "assembly-icon.svg",
        link: "/services/assembly"
      }
    ]}
  />
  
  <!-- Industries Served Section -->
  <IndustriesSection 
    title="Industries We Serve"
    industries={[
      {
        name: "Aerospace",
        image: "/images/aerospace.jpg",
        link: "/industries/aerospace"
      },
      {
        name: "Medical Devices",
        image: "/images/medical.jpg",
        link: "/industries/medical"
      },
      {
        name: "Semiconductor",
        image: "/images/semiconductor.jpg",
        link: "/industries/semiconductor"
      }
    ]}
  />
  
  <!-- Certifications Section -->
  <CertificationsSection 
    title="Quality Assurance"
    subtitle="Our commitment to quality is reflected in our certifications"
    certifications={[
      {
        name: "AS9100D",
        logo: "/images/as9100.svg",
        description: "Aerospace Quality Management System certification"
      },
      {
        name: "ISO 9001:2015",
        logo: "/images/iso9001.svg",
        description: "International Quality Management System standard"
      }
    ]}
  />
  
  <!-- Call to Action Section -->
  <CTASection 
    title="Ready to Start Your Next Project?"
    description="Contact us today to discuss your precision manufacturing needs."
    buttonText="Request a Quote"
    buttonLink="/contact"
  />
</MainLayout>
